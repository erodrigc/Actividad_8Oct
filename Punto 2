-- Punto 2
-- Creamos el campo de units_available para la tabla de accesorios, y manufacturer para satisfacer la vista del punto 3


ALTER TABLE "SYSTEM"."Options" DROP CONSTRAINT "fk_Option_Types_Options";

DROP TABLE "SYSTEM"."Option_Types";

ALTER TABLE "SYSTEM"."Options" DROP("type_id");


ALTER TABLE "SYSTEM"."Options"
ADD ( "type" VARCHAR2(255) NOT NULL)
ADD ( "manufacturer_id" NUMBER NULL  ) 
ADD ( "units_available" NUMBER DEFAULT 30  NULL  ) ;

TRUNCATE TABLE "Options";


